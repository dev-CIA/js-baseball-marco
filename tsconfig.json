{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
